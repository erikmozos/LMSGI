<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

<xs:complexType name="peri">
    <xs:sequence>
        <xs:element name="nom" type="xs:string"></xs:element>
        <xs:element name="volumvendes" type="xs:integer" minOccurs="0"></xs:element>
    </xs:sequence>
    <xs:attribute name="cif" type="xs:string" use="required"/>
</xs:complexType>

    <xs:element name="llistafactures">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="factura" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="emissor" type="peri"/>
                            <xs:element name="pagador" type="peri"/>
                            <xs:element name="import" type="xs:decimal">
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute name="data" type="xs:date" use="optional"/>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>






